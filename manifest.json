{
    "manifest_version": 2,
    "name": "Конвертер валют для Onliner.by",
    "version": "0.8.0",

    "description": "Работает с авто/мото и стандартной барахолкой, арендой квартир и тд.",
    "icons": {
        "16": "./16x16.png",
        "32": "./32x32.png",
        "48": "./48x48.png",
        "96": "./96x96.png",
        "128": "./128x128.png"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "background" : {
        "page": "background.html"
    },

    "content_scripts":[{
        "matches": [
            "http://*.onliner.by/*",
            "https://*.onliner.by/*"
        ],
        "js": [
            "script_in_content.js"
        ]
    }],

    "browser_action": {
        "default_title": "Конвертер валют для Onliner.by",
        "default_icon" : "./48x48.png"
    }
}